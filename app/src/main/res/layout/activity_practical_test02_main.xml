<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticalTest02MainActivity">

    <TextView
        android:id="@+id/server_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SERVER"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/server_port"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Port"
        android:layout_below="@+id/server_title"/>

    <Button
        android:id="@+id/server_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONNECT"
        android:layout_toRightOf="@+id/server_port"
        android:layout_below="@+id/server_title"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/client_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLIENT"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/server_port"/>

    <EditText
        android:id="@+id/client_addr"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:layout_below="@+id/client_title"/>

    <EditText
        android:id="@+id/client_port"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Port"
        android:layout_toRightOf="@+id/client_addr"
        android:layout_below="@+id/client_title" />

    <EditText
        android:id="@+id/city"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="City"
        android:layout_below="@+id/client_addr"/>

    <Button
        android:id="@+id/get_weather_forecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET WEATHER FORECAST"
        android:layout_toRightOf="@+id/city"
        android:layout_below="@+id/client_port" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city"
        android:entries="@array/weather_data"/>

    <TextView
        android:id="@+id/weather_forecast_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:maxLines="10"/>

</RelativeLayout>